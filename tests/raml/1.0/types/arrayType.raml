#%RAML 1.0

title: World Music API
baseUri: http://example.api.com/{version}
version: v1
mediaType: application/json

types:
  Email:
    type: object
    additionalProperties: false
    properties:
      subject: string
      body: string

  Emails:
    type: Email[]
    minItems: 1
    uniqueItems: true
    example: # example that contains array
      - # start item 1
        subject: My Email 1
        body: This is the text for email 1.
      - # start item 2
        subject: My Email 2
        body: This is the text for email 2.

/email:
  get:
    responses:
      200:
        body:
          application/json:
            type: Email
/emails:
  get:
    responses:
      200:
        body:
          application/json:
            type: Emails