#%RAML 1.0 DataType
type: object
displayName: Author
description: Information about author
properties:
  id:
    type: number
    required: false
  name:
    type: string
    required: true
  dob:
    type: date-only
    required: true
  sex:
    type: string
    enum: [ male, female ]
  locked:
    type: boolean
    default: false
example: |
  {
    "id": 345894,
    "name": "Joe Blogs",
    "dob": "1999-07-26",
    "sex": "male",
    "locked": false
  }
